@using Microsoft.AspNetCore.Mvc.Rendering
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Firma.Data.Data.Sklep.Item
@{
    ViewData["Title"] = "Szczegóły";
    Layout = "~/Views/Shared/_SklepLayout.cshtml";
}

<style>
    .white-text {
        color: #fff !important;
    }
</style>

<div class="row">
    <div class="col s12 m8 offset-m2">
        <div class="card-panel">
            <div class="row">
                <div class="col s12">
                    <a class="modal-trigger" href="#modal1">
                        <img src="data:image;base64,@System.Convert.ToBase64String(Model.Photo)" alt="@Model.InfoGlowne" class="responsive-img center-block" style="object-fit: contain; max-height: 400px;">
                    </a>
                </div>
                <div class="col s12">
                    <h5 class="left-align">@Model.InfoGlowne</h5>
                    <h6 class="left-align">Cena: @Model.Cena.ToString("F2") zł</h6>
                </div>
                <div class="col s12">
                    <p class="justify">@Model.Opis</p>
                </div>
                <div class="col s12 justify-content-center" style="padding-inline: auto">
                    <a href="@Url.Action("Index", "Shop")" class="waves-effect waves-light btn grey darken-1">Powrót do sklepu</a>
                    <button class="waves-effect waves-light btn white-text" style="background-color: #F78154">
                        <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.ItemId" class="white-text">
                            <i class="material-icons left white-text">add_shopping_cart</i>
                            DODAJ DO KOSZYKA
                        </a>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <img src="data:image;base64,@System.Convert.ToBase64String(Model.Photo)" alt="@Model.InfoGlowne" class="responsive-img center-block" style="object-fit: contain;">
    </div>
</div>

