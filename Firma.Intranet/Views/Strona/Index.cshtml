@model IEnumerable<Firma.Data.Data.CMS.Page>

@{
    ViewData["Title"] = "Strona";
}

<h1>Strona</h1>

@using (Html.BeginForm("Index", "Strona", FormMethod.Get))
{
    <div class="form-group">
        <label for="searchTytul">Wyszukaj po tytule:</label>
        <input type="text" class="form-control" name="searchTytul" id="searchTytul" value="@ViewBag.CurrentFilterTytul">
    </div>
    <br/>
    <div class="form-group">
        <label for="searchTresc">Wyszukaj po treści:</label>
        <input type="text" class="form-control" name="searchTresc" id="searchTresc" value="@ViewBag.CurrentFilterTresc">
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Wyszukaj</button>
}
<br/>
<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tytul)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tresc)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tresc)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdStrony">Edycja</a>
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdStrony">Szczegóły</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdStrony">Usuń</a>
            </td>
        </tr>
    }
    </tbody>
</table>


