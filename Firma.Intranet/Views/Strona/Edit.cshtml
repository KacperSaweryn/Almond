@model Firma.Data.Data.CMS.Page

@{
    ViewData["Title"] = "Edycja";
}

<h1>Edycja</h1>

<h4>Strona</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdStrony" />
            <div class="form-group">
                <label asp-for="LinkTytul" class="control-label"></label>
                <input asp-for="LinkTytul" class="form-control" />
                <span asp-validation-for="LinkTytul" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tytul" class="control-label"></label>
                <input asp-for="Tytul" class="form-control" />
                <span asp-validation-for="Tytul" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tresc" class="control-label"></label>
                <input asp-for="Tresc" class="form-control" />
                <span asp-validation-for="Tresc" class="text-danger"></span>
            </div>
            @* <div class="form-group"> *@
            @*     <label asp-for="FotoUrl" class="control-label"></label> *@
            @*     <input asp-for="FotoUrl" class="form-control" /> *@
            @*     <span asp-validation-for="FotoUrl" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group" novalidate>
                <label asp-for="FotoUrl" class="control-label"></label>
                <input type="file" asp-for="FotoUrl" class="form-control" accept="image/*" />
                <span asp-validation-for="FotoUrl" class="text-danger" asp-validation-summary></span>
            </div>
            <div class="form-group">
                <label asp-for="AltText" class="control-label"></label>
                <input asp-for="AltText" class="form-control" />
                <span asp-validation-for="AltText" class="text-danger"></span>
            </div>
            @* <div class="form-group"> *@
            @*     <label asp-for="FotoUrlDown" class="control-label"></label> *@
            @*     <input asp-for="FotoUrlDown" class="form-control" /> *@
            @*     <span asp-validation-for="FotoUrlDown" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group" novalidate>
                <label asp-for="FotoUrl" class="control-label"></label>
                <input type="file" asp-for="FotoUrl" class="form-control" accept="image/*" />
                <span asp-validation-for="FotoUrl" class="text-danger" asp-validation-summary></span>
            </div>
            <div class="form-group">
                <label asp-for="AltTextDown" class="control-label"></label>
                <input asp-for="AltTextDown" class="form-control" />
                <span asp-validation-for="AltTextDown" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pozycja" class="control-label"></label>
                <input asp-for="Pozycja" class="form-control" />
                <span asp-validation-for="Pozycja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
