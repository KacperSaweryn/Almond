@model IEnumerable<Firma.Data.Data.CMS.Params>

@{
    ViewData["Title"] = "Parametry";
}

<h1>Parametry</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tresc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Typ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pozycja)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tresc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Typ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pozycja)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdParametr">Edycja</a>
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdParametr">Szczegóły</a>
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdParametr">Usuń</a>
            </td>
        </tr>
    }
    </tbody>
</table>