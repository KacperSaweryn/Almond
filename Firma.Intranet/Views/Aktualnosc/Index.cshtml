@model IEnumerable<Firma.Data.Data.CMS.News>

@{
    ViewData["Title"] = "Aktualność";
}

<h1>Aktualności</h1>

@using (Html.BeginForm("Index", "Aktualnosc", FormMethod.Get))
{
    <div class="form-group">
        <label for="searchTytulNews">Wyszukaj po tytule:</label>
        <input type="text" class="form-control" name="searchTytulNews" id="searchTytulNews" value="@ViewBag.CurrentFilterTytulNews">
    </div>
    <br />
    <div class="form-group">
        <label for="searchTrescNews">Wyszukaj po treści:</label>
        <input type="text" class="form-control" name="searchTrescNews" id="searchTrescNews" value="@ViewBag.CurrentFilterTrescNews">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Wyszukaj</button>
}
<br />
<p>
    <a asp-action="Create" class="btn btn-primary">Nowa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LinkTytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tresc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LinkTytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tresc)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdAktualnosci">Edycja</a>  
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdAktualnosci">Szczegóły</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdAktualnosci">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
