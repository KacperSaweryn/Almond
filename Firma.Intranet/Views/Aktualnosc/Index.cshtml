@model IEnumerable<Firma.Data.Data.CMS.News>

@{
    ViewData["Title"] = "Aktualność";
}

<h1>Aktualności</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nowa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LinkTytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tresc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pozycja)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LinkTytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tresc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pozycja)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdAktualnosci">Edycja</a>  
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.IdAktualnosci">Szczegóły</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdAktualnosci">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
